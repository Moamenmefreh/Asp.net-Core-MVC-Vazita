@using Hayaat_Karima.Models
@model IEnumerable<DoctorsTb>
@{
    ViewData["Title"] = "Home Page";
}

<link href="~/css/Home.css" rel="stylesheet" />
<section class="homepage m-0">
    <div class="hayaat text-end">
        <h1 class="mb-5">
            رعاية صحية لحياة أفضل لك مع حياه كريمة
        </h1>
        <h3>احجز اونلاين او كلم <span class=""><i class="fa-solid fa-phone text-danger"></i></span> <strong>12345</strong></h3>
    </div>
    <div class="info_doctor bg-white w-75  ">

        <div class="top  d-flex align-items-start justify-content-between">
            <div class="left  d-flex  justify-content-between">
               <div class="contact-doc ">
                    <h2>احجز دكتور</h2>
                    <p>الفحص و الاجراء</p>
               </div>
                <i class="fa-regular fa-calendar mt-5"></i>
            </div>
            <div class="right  d-flex  justify-content-between">

                <div class="contact-doc text-primary">
                    <h2>مكالمه دكتور</h2>
                    <p class="">  المتابعه عبر مكالمه مع  <i class="fa-solid fa-headset text-primary "></i></p>
                </div>
               
            </div>
           
        </div>
    
    <div class="datails-doctor w-100 m-auto ">
            <form class="form-control d-flex align-content-sm-center m-auto" dir="rtl" asp-controller="Home" asp-action="Detailsalldoctor" method="post">
             <div>
                    <input type="text" name="specialName" list="specialName" id="special" placeholder="التخصص" class="form-control " />
                    <datalist id="specialName">
                        @foreach (var item in Model)
                        {
                            <option value="@item.SpecializatinTb.SpecializatinName"></option>
                        }
                    </datalist>
          </div>
                <div>
                    <input type="text" name="regionName" id="level" list="regionName" class="form-control" placeholder="المركز" />
                    <datalist id="regionName">
                        @foreach (var item in Model)
                        {
                            <option value="@item.region.RegionName"></option>
                        }
                    </datalist>
                </div> 
                <div class="div-doc">
                    <input type="text" name="docName" id="Name" list="name" class="form-control" placeholder="الدكتور" />
                    <datalist id="name">
                        @foreach (var item in Model)
                        {
                        
                            <option value="@item.DocName"></option>
                        }
                    </datalist>
                </div>
                <div class="search">
                    <button type="submit" class="btn btn-danger form-control h-100 text-white" > <img src="~/images/search.svg" alt="Alternate Text" class="text-white" /> ابحث</button>
                </div>
            </form>


        </div>

    </div>
</section>

